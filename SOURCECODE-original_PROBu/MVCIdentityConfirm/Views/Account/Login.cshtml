@model MVCIdentityConfirm.Models.LoginViewModel
<head>

    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>



    <div class="lightBlue" style="padding-top:5%; padding-bottom:5%; height:100%; min-width:1000px">
        <div class="row " style="padding-top:20px; padding-bottom:20px;">
            <div  style="width: 48%; float:left">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Zaloguj sie.</h4>
                        <hr />
                        <div style="font-weight: bold; color:brown; margin-left:21%">@ViewBag.Warning</div>
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.Label("Login", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Hasło", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.Label("Zapamiętaj mnie", new { style = "color:#fff;" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="g-recaptcha" data-sitekey="6Leh4yQTAAAAAGQjZ1JrIdt-zbQYiNkIjCo3CZrH"></div>
                                        <input type="submit" value="ZALOGUJ" class="btn btn-default button button1 button2" />
                                    </div>
                                </div>
                                <br />
                            </div>
                        </div>
                        <p>
                            <span class="wyroznioneCzerwone" style="margin-left: 19%; "> @Html.ActionLink("Zarejestruj", "Register") </span>się jeżeli nie posiadasz konta.<br />
                            <span class="wyroznioneCzerwone" style="margin-left: 16%; "> @Html.ActionLink("Utwórz nowe hasło", "Register") </span> jeśli nie pamiętasz starego.
                        </p>
                    }
                </section>
            </div>

            <div style="float:left; width:49%;;">
                <div style="margin-left:30%;">
                    <img src="~/images/pobrane_new.png" />
                </div>
                <div id="loginForm" style="padding-top: 0px; text-align:justify;">

                    <p>By móc korzystać z serwisu musisz się zalogować. Jeśli jeszcze nie posiadasz konta możesz je założyć klikając na link <span style="color:brown"> @Html.ActionLink("zarejestruj", "Register")</span>.</p>
                </div>
               

            </div>
            <div style="clear:both"></div>
        </div>
    </div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}